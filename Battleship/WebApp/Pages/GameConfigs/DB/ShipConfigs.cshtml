@page
@model WebAppTest.Pages.GameConfigs.DB.ShipConfigsDb

<h3>Ship Settings</h3>
<br/>
<div class="container text-center">
    <div class="row justify-content-md-center">
        @if (Model.ShipConfigErrorMessage != null)
        {
            <div class="alert alert-danger" role="alert" style="width: 100%">
                @Model.ShipConfigErrorMessage
            </div>
            <br/>
        }
    </div>
</div>


@if (@ShipConfigsDb.Brain.TempConfig.ShipConfigs.Count == 0)
{
    <h5 class="display-7">Please add ship settings</h5>
}
@if (@ShipConfigsDb.Brain.TempConfig.ShipConfigs.Count != 0)
{
    <table class="table">
        <thead>
        <tr>
            <th>Name</th>
            <th>Ship Size X</th>
            <th>Ship Size Y</th>
            <th>Quantity</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var config in ShipConfigsDb.Brain.TempConfig.ShipConfigs)
        { 
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => config.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => config.ShipSizeX)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => config.ShipSizeY)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => config.Quantity)
                </td>
            </tr>
        }
        </tbody>
    </table>
    <br/>
}

<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-page="./ShipConfigs">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ShipConfig.Name" class="control-label"></label>
                <input asp-for="ShipConfig.Name" class="form-control"/>
                <span asp-validation-for="ShipConfig.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShipConfig.ShipSizeX" class="control-label"></label>
                <input asp-for="ShipConfig.ShipSizeX" class="form-control" value=@(Model.ShipConfig.ShipSizeX == 0 ? "" : Model.ShipConfig.ShipSizeX)/>
                <span asp-validation-for="ShipConfig.ShipSizeX" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShipConfig.ShipSizeY" class="control-label"></label>
                <input asp-for="ShipConfig.ShipSizeY" class="form-control" value=@(Model.ShipConfig.ShipSizeY == 0 ? "" : Model.ShipConfig.ShipSizeY)/> 
                <span asp-validation-for="ShipConfig.ShipSizeY" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShipConfig.Quantity" class="control-label"></label>
                <input asp-for="ShipConfig.Quantity" class="form-control" value=@(Model.ShipConfig.Quantity == 0 ? "" : Model.ShipConfig.Quantity)/>
                <span asp-validation-for="ShipConfig.Quantity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-light">Add ship</button>
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-page="./ShipConfigs">
            <button type="submit" class="btn btn-light">Save settings</button>
            <input class="invisible" name="SaveSettings" value="true">
        </form>
    </div>
</div>
