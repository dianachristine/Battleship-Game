@page
@model WebAppTest.Pages_ShipConfigs.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Saved ship settings from DB</h1>

<a class="btn btn-light btn-sm" asp-page="Create">Create New</a>
<br/>
<br/>

<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ShipConfig[0].Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShipConfig[0].ShipSizeX)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShipConfig[0].ShipSizeY)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShipConfig[0].Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShipConfig[0].GameConfig)
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.ShipConfig) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShipSizeX)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShipSizeY)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameConfig.GameConfigName)
            </td>
        </tr>
    }
    </tbody>
</table>

<br/>
<div>
    <a style="color: #000000" asp-page="/GameConfigs/DB/Index">Back to List</a>
</div>
